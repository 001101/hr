<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    	<record id="view_leave_accrual_template_form" model="ir.ui.view">
            <field name="name">hr.leave.accrual.template.form</field>
            <field name="model">hr.leave.accrual.template</field>
            <field name="arch" type="xml">
                <form string="Leave Accrual Templates">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="amount_type"/>
                    <label for="line_ids" string="Template Lines" colspan="4"/>
                    <field name="line_ids" nolabel="1" colspan="4">
                        <tree editable="top">
                            <field name="salary_rule_id"/>
                            <field name="substract"/>
                        </tree>
                    </field>
                </form>
            </field>
        </record>
    </data>
</openerp>