<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    	<record id="view_leave_accrual_form" model="ir.ui.view">
            <field name="name">hr.leave.accrual.form</field>
            <field name="model">hr.leave.accrual</field>
            <field name="arch" type="xml">
                <form string="Leave Accrual">
                    <field name="template_id"/>
                    <field name="total" readonly="1"/>
                    <field name="amount_type" readonly="1"/>
                    <label for="line_ids" string="Leave Accrual Lines" colspan="4"/>
                    <field name="line_ids" nolabel="1" colspan="4">
                        <tree editable="top">
                            <field name="source" readonly="1"/>
                            <field name="payslip_id" readonly="1"/>
                            <field name="payslip_line_id" readonly="1"/>
                            <field name="state" readonly="1"/>
                            <field name="amount" attrs="{'readonly': [('payslip_id', '!=', False)]}"/>
                            <field name="date"
                                attrs="{
                                'readonly': [('payslip_id', '!=', False)],
                                'required': [('payslip_id', '=', False)]
                            }"/>
                            <field name="description" attrs="{
                                'readonly': [('payslip_id', '!=', False)],
                                'required': [('payslip_id', '=', False)]
                            }"/>
                        </tree>
                    </field>
                </form>
            </field>
        </record>
    </data>
</openerp>